{% import 'components/form/fields_macros.html.twig' as fields %}

{% if canadd %}
    <form method='post' name="form" action={{ call(itemtype ~ '::getFormURL') }}>
{% endif %}
<div class="card border-0 shadow-none p-0 m-0 mt-3">
    <div class="card-header mb-1 pt-2">
        <h4 class="card-title ">
            {{ this.getTypeName(2) }}
        </h4>
    </div>
</div>

{{ fields.htmlField(
    '',
    call(self ~ '::getStatus', [item.fields["global_validation"], true])|raw,
    __('Global approval status')
) }}

{{ fields.htmlField(
    '',
    call(self ~ '::getValidationStats', [tID]),
    __('Approval status details')
) }}

{% if canadd %}
    {% set minvalue %}
        {{ item.getValueToSelect(
            'validation_percent',
            'validation_percent',
            item.fields["validation_percent"]
        )|raw }}
        <input type='submit' name='update' class='btn btn-primary' value='{{ _x('button', 'Save') }}'>
        {% if tID is not null %}
            <input type='hidden' name='id' value='{{ tID }}'>
        {% endif %}
    {% endset %}

    {{ fields.htmlField(
        '',
        minvalue,
        __('Minimum validation required')
    ) }}
{% else %}
    {{ fields.htmlField(
        '',
        call('Dropdown::getValueWithUnit', [item.fields["validation_percent"], "%"]),
        __('Minimum validation required')
    ) }}
{% endif %}

{% if canadd %}
       <input type="hidden" name="_glpi_csrf_token" value="{{ csrf_token() }}" />
   </form>
{% endif %}

<div class="card border-0 shadow-none p-0 m-0 mt-3">
    <div class="card-header mb-3 pt-2">
        <h4 class="card-title ">
            {{ __('Approvals for the ticket') }}
        </h4>
    </div>
    {% if canadd %}
        {% if item.fields['status'] not in donestatus %}
            <div class="card-body mb-3 p-0 text-center">
                <a class='btn btn-primary' href='javascript:viewAddValidation{{ tID }}{{ rand }}()'>
                    {{ __('Send an approval request') }}
                </a>
            </div>
        {% endif %}
    {% endif %}
</div>

<div id='viewvalidation{{ tID }}{{ rand }}'></div>

<script type='text/javascript'>
    function viewAddValidation{{ tID }}{{ rand }}() {
        var params = {
            type: '{{ this.getType() }}',
            parenttype: '{{ itemtype }}',
            {{ items_id }}: '{{ this.fields[items_id] }}',
            id: -1
        };
        $('#viewvalidation{{ tID }}{{ rand }}').load('{{ root_doc }}/ajax/viewsubitem.php', params);
    };
</script>
